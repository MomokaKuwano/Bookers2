<h1>User info</h1>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction</h3>
</div>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= book.user.name %></p>
  <p>Title
  <%= link_to book_path(book.id) do%>
  <%= book.title %></p>
  <% end %>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>

