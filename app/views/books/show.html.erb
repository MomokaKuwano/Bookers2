 <main>
    <div class= "container px-5 px-sm-0">
      <div class="row">
         <div class="col-md-3">
           <%= render 'side_bar', user: @user, book: @books  %>


         <div class="col-md-8 offset-md-1">
          <h2>Books detail</h2>
           <table class= "table">
             <tbody>
              <tr>
                <td>
                 <%= image_tag @book.user.get_profile_image(100,100)  %>
                 <br>
                 <%=link_to @book.user.name ,user_path(@book.user) %>
                 </td>
                <td>
                  <%= @book.title %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
              </tr>
             </tbody>
           </table>
          </div>
        </div>
      </div>
  </main>


