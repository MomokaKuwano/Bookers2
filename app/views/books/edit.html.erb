
 
  <div class="container">
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
       <div>
          <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
            <% end %>
       </div>
       
         <%= form_with model: @book do |f| %>
          <div>
           <label for="edittitle">Title</label>
           </div>
             <%= f.text_field :title, autofocus: true, :size=>"50"%>

          <div class ="editopinion mt-3">
           <label for="editopinion">Opinion</label>
          </div>
             <%= f.text_area :body ,:size=>"50"%>

          <div class ="button mt-3">
             <%= f.submit "Updete Book", class: "btn btn-success" %>
          </div>
             <% end %>
          <div class ="mt-3">
          <%= link_to "show", book_path(@book) %>
          |
          <%= link_to "back", books_path %>    
          </div>
       </div>
    </div>
</div>